<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>
<fx:root fx:id="root" type="GridPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">

    <columnConstraints>
        <ColumnConstraints percentWidth="100.0"/>
    </columnConstraints>

    <VBox GridPane.valignment="CENTER">
        <Label fx:id="nombreLabel" GridPane.rowIndex="0" alignment="CENTER" maxWidth="Infinity"/>

        <GridPane GridPane.valignment="CENTER" fx:id="botoneraGridPane">

            <!--<columnConstraints>-->
                <!--<ColumnConstraints percentWidth="50.0" halignment="center"/>-->
                <!--<ColumnConstraints percentWidth="50.0" halignment="center"/>-->
            <!--</columnConstraints>-->

            <GridPane GridPane.columnIndex="0" GridPane.halignment="center">

                <GridPane GridPane.rowIndex="0">
                    <ProgressBar fx:id="vidaProgressBar" GridPane.rowIndex="0"/>
                    <Label fx:id="vidaLabel" GridPane.rowIndex="0" textAlignment="CENTER" GridPane.halignment="center"/>

                </GridPane>

                <ImageView fx:id="imagenPosicionable" GridPane.rowIndex="1" fitHeight="60" fitWidth="40"
                           GridPane.halignment="CENTER">
                    <Image url="/vista/imagenes/Aldeano_blue.png"/>
                </ImageView>

            </GridPane>

            <fx:include fx:id="botoneraMovimiento" source="MovimientoBotonera.fxml"
                        GridPane.columnIndex="1"/>

        </GridPane>

    </VBox>



    <stylesheets>
        <URL value="@/vista/css/Botonera.css"/>
    </stylesheets>

</fx:root>
