<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:id="contenedorPrincipal"  >

    <columnConstraints>
        <ColumnConstraints percentWidth="50.0"/>
        <ColumnConstraints percentWidth="50.0"/>
    </columnConstraints>

    <GridPane GridPane.valignment="CENTER" style="-fx-background-color: yellow">

        <columnConstraints>
            <ColumnConstraints percentWidth="100.0"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="100"/>
        </rowConstraints>

        <GridPane  GridPane.halignment="CENTER" GridPane.valignment="CENTER">

            <Label fx:id="botonera" text="Botonera de acciones"
                   GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
        </GridPane>


    </GridPane>


    <GridPane fx:id="infoJugador" GridPane.columnIndex="1" GridPane.halignment="CENTER">

        <columnConstraints>
            <ColumnConstraints percentWidth="50.0"/>
            <ColumnConstraints percentWidth="50.0"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints percentHeight="50"/>
            <RowConstraints percentHeight="50"/>
        </rowConstraints>

        <Label styleClass="nombreJugador" text="Nombre jugador 1: "
               GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
        <Label styleClass="nombreJugador" fx:id="nombreJugador1"
               GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>

        <Label styleClass="nombreJugador" text="Nombre jugador 2: "
               GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
        <Label styleClass="nombreJugador" fx:id="nombreJugador2"
               GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER"/>
    </GridPane>

</GridPane>
