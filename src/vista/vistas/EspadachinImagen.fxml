<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.net.URL?>
<fx:root fx:id="root" type="GridPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">

    <VBox>
        <Label fx:id="nombreLabel" GridPane.rowIndex="0" alignment="CENTER" maxWidth="Infinity"/>

        <GridPane GridPane.columnIndex="0">

            <GridPane GridPane.rowIndex="0" GridPane.halignment="center">
                <ProgressBar fx:id="vidaProgressBar" GridPane.rowIndex="0"/>
                <Label fx:id="vidaLabel" GridPane.halignment="CENTER"/>
            </GridPane>

            <ImageView fx:id="imagenPosicionable" GridPane.rowIndex="1" fitHeight="60" fitWidth="40"
                   style="-fx-padding: 5" GridPane.halignment="CENTER">
                <Image url="/vista/imagenes/Espadachin_blue.png"/>
            </ImageView>

        </GridPane>
    </VBox>
</fx:root>